---
import BaseLayout from "../layouts/BaseLayout.astro";
import FormLogin from "../components/RegisterAndLogin.svelte";
import { checkSession } from "../utils/checkSession";

const isLoggedin = await checkSession(Astro);
if (isLoggedin) return Astro.redirect("/dashboard");
---

<BaseLayout title="SKF | Login" loadNav={false} isLoggedin={isLoggedin}>
  <div class="wrapper">
    <FormLogin client:load mode="login" />
  </div>
</BaseLayout>

<style>
  :global(html, body) {
    height: 100%;
  }

  :global(body) {
    background-image: url("/imgs/background-logo.svg");
    background-repeat: no-repeat;
    background-position: center center;
  }

  .wrapper {
    height: 100%;
    display: flex;
    align-items: center;
  }
</style>
