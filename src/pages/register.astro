---
import RegisterInput from "../components/register/RegisterInput.astro";
import Baselayout from "../layouts/Baselayout.astro";
---

<Baselayout title="SKF | Register">
  <RegisterInput />
</Baselayout>

<style>
  :global(body) {
    background: var(--background-gradient);
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  :global(.register-form) {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 32px;
    width: 90%;
    background-color: var(--white);
    border-radius: 0 1rem 1rem 0;
    padding: 48px;
    justify-content: center;

    margin: 4rem 0; /* Effect */
  }

  :global(.register-form .form) {
    display: flex;
    flex-direction: column;
    gap: 16px;

    width: 100%;
  }

  :global(button, .btn) {
    width: 100%;
  }

  :global(.form .btn) {
    background-color: var(--primary-500);
    color: var(--white);
  }

  :global(.form .btn:hover) {
    background-color: var(--primary-700);
  }

  :global(.item-input) {
    display: flex;
    flex-direction: column;
    gap: 4px;
    width: 100%;
  }

  :global(label) {
    font-size: 14px;
  }

  :global(input[type="text"], input[type="password"]) {
    width: 100%;
    border: none;
    padding: 1em;
    background-color: rgb(245, 245, 245);
    border-radius: 0.5em;
  }

  :global(input[type="text"]:focus, input[type="password"]:focus) {
    outline: 0.1em solid var(--primary-500);
  }

  /* CONTAINER PARA SIGN WITH */
  :global(.container-sign-with) {
    display: flex;
    flex-direction: column;
    width: 100%;
    align-items: center;
    color: rgb(90, 90, 90);
    gap: 16px;
  }

  :global(.container-sign-with .title) {
    display: flex;
    flex-direction: row;
    width: 100%;
    gap: 16px;
    align-items: center;
  }

  :global(.container-sign-with .title div) {
    width: 100%;
    height: 1px;
    background-color: rgb(160, 160, 160);
  }

  :global(.container-sign-with .title p) {
    text-align: center;
    width: inherit;
  }

  :global(.container-sign-with .list-social) {
    display: flex;
    flex-direction: row;
    width: 100%;
    gap: 24px;
  }
</style>
