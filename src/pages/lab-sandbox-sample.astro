<style>
  html {
    background-color: #fff;
    height: 100%;
  }

  body {
    background: radial-gradient(
        at top center,
        rgba(255, 255, 255, 0.5),
        transparent 75vw
      ),
      radial-gradient(
        at bottom center,
        rgba(255, 255, 255, 0.5),
        transparent 75vw
      ),
      radial-gradient(
        circle at top left,
        rgba(81, 85, 148, 0.5),
        transparent 75vw
      ),
      radial-gradient(at top right, rgba(229, 103, 105, 0.5), transparent 75vw),
      radial-gradient(
        at bottom left,
        rgba(229, 103, 105, 0.5),
        transparent 75vw
      ),
      radial-gradient(at bottom right, rgba(81, 85, 148, 0.5), transparent 75vw);
    color: #515594;
    height: 100%;
  }

  header {
    background-color: #fff;
  }

  header .wrapper {
    display: flex;
    align-items: center;
    padding: 1rem;
    font-size: 1.25rem;
    font-weight: 700;
    margin-bottom: 4rem;
  }

  header svg {
    width: 3.5rem;
    height: 3.5rem;
    margin-right: 1rem;
  }

  h1,
  h2 {
    text-align: left;
    font-weight: 700;
    margin-bottom: 1rem;
  }

  main {
    display: flex;
    flex-direction: column;
    justify-content: center;
    height: 100%;
    box-shadow: 0 0 2em rgb(0 0 0 / 5%);
    background: #fff;
    border-radius: 1em;
    padding: 2em;
  }

  h1 {
    font-size: 1.5rem;
    font-weight: 600;
  }

  input {
    border: 1px solid #515594;
    border-radius: 0.5rem;
    padding: 0.5rem 0.75rem;
    font-size: 1.25rem;
    max-width: 20rem;
  }

  .form {
    display: flex;
    gap: 1rem;
  }

  button {
    border: 1px solid #515594;
    border-radius: 0.5rem;
    padding: 0.5rem 0.75rem;
    font-size: 1.25rem;
    background-color: #515594;
    color: #fff;
  }
</style>

<script is:inline>
  const btn = document.querySelector("button");
  const input = document.querySelector("input");
  /** @type {HTMLDivElement} */
  const flag = document.querySelector(".flag");

  btn.addEventListener("click", () => {
    const value = input.value;
    flag.style.marginTop = "20px";
    if (value === "skf") {
      flag.innerHTML = "SKF{1nput_1s_4w3s0m3}";
    } else {
      flag.innerHTML = "Try again!";
    }
  });

  // change lab name to the lab url param
  const labName = new URLSearchParams(window.location.search).get("lab");
  document.querySelector("h1").innerHTML = labName;
</script>
